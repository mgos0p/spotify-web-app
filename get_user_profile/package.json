    "start": "next start",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.30",
    "@types/react": "18.2.71",
    "autoprefixer": "^10.4.19",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
